<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- Background Image with Overlay -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        android:src="@drawable/login_page_img" />

    <!-- Dark Overlay for better text readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- App Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_app_logo"
            android:layout_marginBottom="24dp" />

        <!-- Welcome Text with Shadow -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To Gainly!"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:shadowColor="@color/shadow_dark"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle with Animation -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your fitness journey starts here."
            android:textSize="18sp"
            android:textColor="@color/white"
            android:alpha="0.9"
            android:layout_marginBottom="80dp" />

        <!-- Social Login Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/buttons_container_background"
            android:padding="24dp">

            <!-- Google Button with Ripple Effect -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="CONTINUE WITH GOOGLE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_google"
                android:drawablePadding="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="1dp"
                app:cornerRadius="28dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

            <!-- Facebook Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFacebook"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/ic_facebook"
                android:drawablePadding="16dp"
                android:elevation="4dp"
                android:stateListAnimator="@null"
                android:text="CONTINUE WITH FACEBOOK"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp" />

            <!-- Instagram Button with Gradient -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInstagram"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="@color/transparent"
                android:drawableStart="@drawable/ic_instagram_white"
                android:drawablePadding="16dp"
                android:elevation="4dp"
                android:stateListAnimator="@null"
                android:text="CONTINUE WITH INSTAGRAM"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTintMode="multiply"
                app:cornerRadius="28dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>