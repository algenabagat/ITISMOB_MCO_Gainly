<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="16dp"
    android:background="?android:attr/selectableItemBackground" android:clickable="true"
    android:focusable="true">

    <TextView android:id="@+id/workoutNameTv" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Workout Name" android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/workoutDescTv"
        android.layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout description goes here"
        android:textSize="14sp" />

</LinearLayout>
